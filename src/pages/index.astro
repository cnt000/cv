					<Experience title="Full-stack senior developer" duration="07/2020 - 10/2021" link="https://www.monrif.it" company="MONRIF.NET (Bologna)" content={content} />
					<Experience title="Full-stack senior developer" duration="07/2020 - 10/2021" link="https://www.monrif.it" company="MONRIF.NET (Bologna)" content={content} />
				</SectionTitle>
				<SectionTitle title="Volunteer">
